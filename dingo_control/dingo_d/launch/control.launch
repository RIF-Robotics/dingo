<launch>
  <rosparam command="load" file="$(find dingo_control)/dingo_d/config/control.yaml" />

  <group if="$(optenv DINGO_CONTROL_EXTRAS 0)" >
    <rosparam command="load" file="$(env DINGO_CONTROL_EXTRAS_PATH)" />
  </group>

  <node name="controller_spawner" pkg="controller_manager" type="spawner"
        args="dingo_joint_publisher dingo_velocity_controller" />

  <node pkg="robot_localization" type="ekf_localization_node" name="ekf_localization">
    <rosparam command="load" file="$(find dingo_control)/dingo_d/config/robot_localization.yaml" />
  </node>

  <node pkg="twist_mux" type="twist_mux" name="twist_mux">
    <rosparam command="load" file="$(find dingo_control)/common/config/twist_mux.yaml" />
    <remap from="cmd_vel_out" to="dingo_velocity_controller/cmd_vel"/>
  </node>

</launch>
